    color: black;
    cursor: pointer;
}

/* Camera */
.video-wrapper {
    position: relative;
    width: 100%;
    max-width: 420px;
    margin: 0 auto 30px;
}

video {
    width: 100%;
    aspect-ratio: 1 / 1;
    border-radius: 20px;
    object-fit: cover;
    box-shadow: 0 0 40px rgba(255,255,255,0.8);
    filter: brightness(1.12) contrast(1.1) saturate(1.25) blur(0.6px);
}

/* Halo */
