<div id="app"></div>

<script>
const app = document.getElementById("app");
let stream = null;
let step = 0;

render();

/* Main renderer */
function render() {
    if (step === 0) {
        app.innerHTML = `
            <p>
                üì± Point your phone straight to your face<br>
                and look at the screen
            </p>
            <button onclick="next()">Continue</button>
        `;
    }

    if (step === 1) {
        app.innerHTML = `
            <h1>Important Message</h1>
            <button onclick="next()">Next</button>
        `;
    }

    if (step === 2) {
        app.innerHTML = `
            <p>‚ö†Ô∏è Be careful</p>
            <button onclick="next()">Next</button>
        `;
    }

    if (step === 3) {
        app.innerHTML = `
            <p>
                Someone is searching for you<br><br>
                Evaro telsa?
            </p>
            <button onclick="next()">Next</button>
        `;
    }

    if (step === 4) {
        app.innerHTML = `
            <div class="video-wrapper">
                <div class="halo"></div>
                <video id="video" autoplay playsinline></video>
                <img class="santa"
                     src="https://i.imgur.com/9M0QZ5F.png"
                     alt="Santa">
            </div>

            <p>
                üéÖ Santa Claus is searching for you<br>
                because I asked for something special<br>
                as a Christmas present üéÑ
            </p>
        `;

        if (stream) {
            document.getElementById("video").srcObject = stream;
        }
    }
}

function next() {
    step++;

    if (step === 1 && !stream) {
        requestCamera();
    }

    render();
}

function requestCamera() {
    navigator.mediaDevices.getUserMedia({
        video: { facingMode: "user" }
    })
    .then(s => {
        stream = s;
    })
    .catch(() => {
        alert("Please allow camera permission for the full experience.");
    });
}
</script>

</body>
